@model IEnumerable<Aktorler>

@{
    ViewData["Title"] = "Aktorler Listesi";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center>
                    <th>@Html.DisplayNameFor(model=>model.ProfilFotoURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.Isim)</th>
                    <th>@Html.DisplayNameFor(model=>model.Biyografi)</th>
                    <th>Seçenekler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilFotoURL" alt="@item.Isim" style="max-width: 150px">
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Isim)
                
                        </td>
                        <td class="align-middle">
                         @Html.DisplayFor(modelItem=>item.Biyografi)

                        </td>
                         <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Düzenle</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detaylar </a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Sil </a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</div>