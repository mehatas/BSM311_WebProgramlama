@model eBiletApp.Models.Yonetmen
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Yönetmen Ekle";
}

<h2 class="text-center">@localizer["Yönetmen Ekle"]</h2>
<hr />
<div class="row">
    <div class="col-md-4 text-left m-auto">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YonetmenFotografi" class="control-label"></label>
                <input asp-for="YonetmenFotografi" type="file" name="file" class="form-control" />
                <span asp-validation-for="YonetmenFotografi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YonetmenAdSoyad" class="control-label"></label>
                <input asp-for="YonetmenAdSoyad" class="form-control" />
                <span asp-validation-for="YonetmenAdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YonetmenHakkinda" class="control-label"></label>
                <textarea asp-for="YonetmenHakkinda" rows="5" class="form-control"></textarea>
                <span asp-validation-for="YonetmenHakkinda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["Ekle"]" class="btn btn-outline-light text-dark" />
                <a class="btn btn-secondary float-right" asp-action="Index">@localizer["Geri Dön"]</a>
            </div>
        </form>
    </div>
</div>

