@model IEnumerable<Film>

@{
    ViewData["Title"] = "Filmler Listesi";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.AfisURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.Isim)</th>
                    <th>@Html.DisplayNameFor(model=>model.Aciklama)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.AfisURL" alt="@item.Isim" style="max-width: 150px">
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Isim)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Aciklama)

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
