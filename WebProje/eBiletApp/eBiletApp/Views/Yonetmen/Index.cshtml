@model IEnumerable<eBiletApp.Models.Yonetmen>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Yönetmenler";
}

<h1>@localizer["Yönetmenler"]</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success text-white">@localizer["Yönetmen Ekle"]</a>
    </p>
}

<table class="table">
    <thead>
        <tr class="text-center text-uppercase">
            <th>
                @Html.DisplayNameFor(model => model.YonetmenFotografi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YonetmenAdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YonetmenHakkinda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    <img src="@item.YonetmenFotografi" asp-append-version="true" style="width:200px; height:200px;">
                </td>
                <td class="font-weight-bold">
                    @Html.DisplayFor(modelItem => item.YonetmenAdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YonetmenHakkinda)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.YonetmenId" class="btn btn-outline-primary">@localizer["Düzenle"]</a>
                        <br />
                        <a asp-action="Details" asp-route-id="@item.YonetmenId" class="btn btn-outline-info">@localizer["Detaylar"]</a>
                        <br />
                        <a asp-action="Delete" asp-route-id="@item.YonetmenId" class="btn btn-outline-danger">@localizer["  Sil  "]</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
