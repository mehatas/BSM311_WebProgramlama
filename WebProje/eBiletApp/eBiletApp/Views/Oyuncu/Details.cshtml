@model eBiletApp.Models.Oyuncu
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Oyuncu Hakkında";
}

<h1 class="text-center">@localizer["Oyuncu Bilgileri"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 align-self-center">
            @Html.DisplayNameFor(model => model.OyuncuFotografi)
        </dt>
        <dd class="col-sm-10 pb-5">
            <img class="w-50 h-100" src="@Model.OyuncuFotografi" asp-append-version="true">
        </dd>
        <dt class="col-sm-2 pb-5 align-self-center">
            @Html.DisplayNameFor(model => model.OyuncuAdSoyad)
        </dt>
        <dd class="col-sm-10 pb-5">
            @Html.DisplayFor(model => model.OyuncuAdSoyad)
        </dd>
        <dt class="col-sm-2 align-self-center">
            @Html.DisplayNameFor(model => model.OyuncuHakkinda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OyuncuHakkinda)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {<a class="btn btn-outline-light text-dark" asp-action="Edit" asp-route-id="@Model.OyuncuId">@localizer["Düzenle"]</a>}
<a class="btn btn-secondary ml-3" asp-action="Index">@localizer["Geri Dön"]</a>
</div>
